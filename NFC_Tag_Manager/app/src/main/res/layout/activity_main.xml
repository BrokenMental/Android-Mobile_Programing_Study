<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inhatc.juha.nfc_tag_manager.MainActivity">

    <TextView
        android:id="@+id/txtLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:gravity="center"
        android:text="NFC Tag Manager"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/nfc"
        android:layout_below="@+id/txtLogo"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnWriter"
        android:layout_marginEnd="29dp"
        android:layout_alignBottom="@+id/btnReader" />

    <Button
        android:id="@+id/btnReader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/btnWriter"
        android:layout_below="@+id/btnWriter"
        android:layout_marginTop="15dp"
        android:text="Read NFC Tag Manager" />

    <Button
        android:id="@+id/btnWriter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtLogo"
        android:layout_marginTop="14dp"
        android:text="Write NFC Tag Manager" />


</RelativeLayout>
