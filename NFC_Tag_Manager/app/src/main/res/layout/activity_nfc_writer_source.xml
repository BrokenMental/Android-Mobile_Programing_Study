<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inhatc.juha.nfc_tag_manager.NFC_Writer_Source">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[ NFC tag message ]"
        android:id="@+id/txtInputMsg"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtTagMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_below="@+id/txtInputMsg"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:singleLine="false"
        android:hint="Input message and touch NFC tag"
        android:textAlignment="textStart"/>

</RelativeLayout>
