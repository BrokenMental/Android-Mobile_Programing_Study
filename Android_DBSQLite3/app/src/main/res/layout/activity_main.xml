<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inhatc.juha.android_dbsqlite3.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:gravity="center"
        android:text="Car Management System"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtCarType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Type : "
        android:layout_above="@+id/btnUpdate"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editCarType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:ems="8"
        android:layout_above="@+id/editCarPower"
        android:layout_alignStart="@+id/textView"
        android:layout_marginStart="14dp"
        android:layout_toStartOf="@+id/btnInsert">

        <requestFocus />

    </EditText>

    <TextView
        android:id="@+id/txtCarPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editCarType"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:text="Power : " />

    <EditText
        android:id="@+id/editCarPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:layout_above="@+id/btnDelete"
        android:layout_alignStart="@+id/editCarType"
        android:layout_toStartOf="@+id/btnUpdate" />

    <Button
        android:id="@+id/btnInsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert"
        android:textSize="12dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textSize="12dp"
        android:layout_below="@+id/btnInsert"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textSize="12dp"
        android:layout_below="@+id/btnUpdate"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textSize="12dp"
        android:layout_below="@+id/btnDelete"
        android:layout_alignParentEnd="true" />

    <ListView
        android:id="@+id/lstMember"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnSearch" />

</RelativeLayout>
